
{
		"compilerOptions": {
			"target": "ES2020",
			"module": "commonjs",
			"outDir": "dist",
			"rootDir": "src",
			"strict": false,
			"esModuleInterop": true,
			"skipLibCheck": true,
			"resolveJsonModule": true,
			"moduleResolution": "node",
			"forceConsistentCasingInFileNames": true
		},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
